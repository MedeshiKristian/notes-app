<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewActions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_48sdp"
        android:background="@color/white"
        android:foregroundTint="@color/secondary_text"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ImageButton
            android:id="@+id/action_undo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_undo_24" />

        <ImageButton
            android:id="@+id/action_redo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_redo_24" />

        <ImageButton
            android:id="@+id/action_bold"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_bold_24" />

        <ImageButton
            android:id="@+id/action_italic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_italic_24" />

        <ImageButton
            android:id="@+id/action_subscript"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_subscript_24" />

        <ImageButton
            android:id="@+id/action_superscript"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_superscript_24" />

        <ImageButton
            android:id="@+id/action_strikethrough"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_strikethrough_24" />

        <ImageButton
            android:id="@+id/action_underline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_underlined_24" />

        <ImageButton
            android:id="@+id/action_decrease_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_text_decrease_24" />

        <ImageButton
            android:id="@+id/action_increase_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_text_increase_24" />

        <ImageButton
            android:id="@+id/action_txt_color"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_color_text_24" />

        <ImageButton
            android:id="@+id/action_bg_color"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_color_fill_24" />

        <ImageButton
            android:id="@+id/action_indent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_indent_increase_24" />

        <ImageButton
            android:id="@+id/action_outdent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_indent_decrease_24" />

        <ImageButton
            android:id="@+id/action_align_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_align_left_24" />

        <ImageButton
            android:id="@+id/action_align_center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_align_center_24" />

        <ImageButton
            android:id="@+id/action_align_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_align_right_24" />

        <ImageButton
            android:id="@+id/action_insert_bullets"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_list_bulleted_24" />

        <ImageButton
            android:id="@+id/action_insert_numbers"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_list_numbered_24" />

        <ImageButton
            android:id="@+id/action_blockquote"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_format_quote_24" />

        <ImageButton
            android:id="@+id/action_insert_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_outline_image_24" />

        <ImageButton
            android:id="@+id/action_insert_audio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_library_music_24" />

        <ImageButton
            android:id="@+id/action_insert_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_video_call_24" />

        <ImageButton
            android:id="@+id/action_insert_youtube"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_video_settings_24" />

        <ImageButton
            android:id="@+id/action_insert_link"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_insert_link_24" />

        <ImageButton
            android:id="@+id/action_insert_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="@null"
            android:src="@android:drawable/checkbox_on_background" />
    </LinearLayout>
</HorizontalScrollView>
