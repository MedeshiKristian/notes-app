<resources>
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="themePrimary">#FFFFFF</item>-->
        <!--        <item name="themeSecondary">#F4F7FD</item>-->

        <item name="themePrimary">#F4F7FD</item>
        <item name="themeSecondary">#FFFFFF</item>

        <item name="themeTextColor">#000000</item>
        <item name="themeSelectionColor">@color/md_grey_200</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/themePrimary</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorPrimaryContainer">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/themeSecondary</item>
        <item name="colorSecondaryVariant">?attr/colorSecondary</item>
        <item name="colorOnSecondaryContainer">?attr/colorSecondary</item>

        <!-- Top bar icons color-->
        <item name="colorControlNormal">?attr/themeTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColorHint">@color/greyColor</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
</resources>