<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryVariant">@color/primary</item>
        <!--        <item name="colorOnPrimary">@color/primary</item>-->
        <!--        <item name="colorOnPrimarySurface">@color/white</item>-->
        <!--        <item name="colorOnPrimaryContainer">@color/white</item>-->
        <item name="colorSurface">@color/white</item>

        <!-- Top bar icons color-->
        <item name="colorControlNormal">@color/white</item>

        <!--        <item name="chipSurfaceColor">@color/white</item>-->

        <!--        <item name="colorOnSurfaceVariant">@color/white</item>-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- item name="android:windowLightStatusBar">true</item -->

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/greyColor</item>
    </style>

    <style name="Theme.NotesApp.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>